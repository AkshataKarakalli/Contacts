
<% if user_signed_in? %>
 <h1>Contacts List</h1>

 <table>
   <thead>
     <tr>
       <th>First name</th>
       <th>Last name</th>
       
       <th>Email</th>
       <th>Phone</th>
       <th>Twitter</th>
       <th>User Id</th>
       <th>DOB</th>
       <th colspan="3"></th>
     </tr>
   </thead>

   <tbody>
     <% @friends.each do |friend| %>
       <% if friend.user == current_user %>
        <tr>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= friend.user_id %></td>
          <td><%= friend.dob %></td>
          <td><%= link_to 'Show', friend %></td>
          <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
          <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
       <% end %>

      
     <% end %>
   </tbody>
 </table>

 <br>
 <h3>Download File</h3>
 <%= link_to "Report", friends_path(format: "csv"), class: 'btn btn-default' %>

 <h3>Import Friends</h3>
<%= form_tag import_friends_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "upload friends" %>
<% end %>

 <%= link_to 'New Friend', new_friend_path %>
<% else %>
 <h1>Welcome</h1>
<% end %>
  