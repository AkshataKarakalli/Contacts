<p id="notice"><%= notice %></p>

<p>
  <strong>Category:</strong>
  <%= @category.category %>
</p>
<h3> Contacts under this category </h3>
<% Friend.where(category_id: @category.id).each do |friend| %>
<p> <%= friend.first_name %>, 
 <%= friend.last_name %>, 
 <%= friend.email %>, 
 <%= friend.phone %>, 
 <%= friend.twitter %>,
 <%= friend.dob %> </p>


<% end %>


<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
